// CAN(name, id, format)
// Valid formats: BOOL, UINT8, UINT16, UINT32, UINT64, FLOAT
// To Motor Controllers:
CAN(DRIVE, 0x01, FLOAT)
CAN(POWER, 0x02, FLOAT)
CAN(RESET, 0x03, UINT64)
// To Lights:
CAN(SIG_LEFT, 0x04, BOOL)
CAN(SIG_RIGHT, 0x05, BOOL)
CAN(SIG_HAZARD, 0x06, BOOL)
CAN(SIG_BRAKE, 0x07, BOOL)
CAN(SIG_RUNNING, 0x8, BOOL)
// To Chaos:
CAN(HORN, 0x09, BOOL)
